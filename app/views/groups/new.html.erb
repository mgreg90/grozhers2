<h1>Create or Join A Group!</h1>
<br><br>
<div class="container">
  <div class="well text-center col-md-4 col-md-offset-1">
    <h3>Create a Group</h3>
    <%= form_for @group, url: groups_path, html: { class: "form-horizontal" } do |g| %>
      <div class="form-group">
        <%= g.label :name, class: "control-label col-md-2 col-sm-2 col-xs-2 col-xs-offset-1" %>
        <div class="col-md-8 col-sm-7 col-xs-6">
          <%= g.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="text-center">
          <%= g.submit 'Submit', class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="well text-center col-md-4 col-md-offset-1">
    <h3>Join a Group</h3>
    <%= form_for @group, url: groups_join_path, html: { class: "form-horizontal" } do |g| %>
      <div class="form-group">
        <%= g.label :name, class: "control-label col-md-2 col-sm-2 col-xs-2 col-xs-offset-1" %>
        <div class="col-md-8 col-sm-7 col-xs-6">
          <%= g.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="text-center">
          <%= g.submit 'Submit', class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
