<div class="group-page-container">
  <div class="row">
    <div class="col-md-6">
      <h1><%= @group.name %></h1>
      <%= button_to 'Leave Group', groups_leave_path(group_id: @group.id), class: "btn btn-default" %>
      <ul class="nav nav-pills">
        <li role="presentation" class="disabled"><a href="#">All Users: for <%= @group.name %></a></li>
        <% @group.users.each do |u| %>
        <li role="presentation"><%= link_to u.username %></li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-6">
      <%= form_for @item, url: group_items_path(group_id: @group.id), html: { class: "form-horizontal" } do |u| %>
      <div class="form-group">
        <%= u.label :name, class: "control-label col-md-3 col-sm-3" %>
        <div class="col-md-6 col-sm-6">
          <%= u.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group hidden-xs hidden-sm">
        <%= u.label :description, class: "control-label col-md-3" %>
        <div class="col-md-6 col-sm-6">
          <%= u.text_field :description, class: "form-control" %>
        </div>
      </div>
      <div class="form-group hidden-xs hidden-sm">
        <%= u.label :price, class: "control-label col-md-3" %>
        <div class="col-md-6 col-sm-6">
          <%= u.text_field :price, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-4 col-md-6">
          <%= u.submit "Submit", class: "btn btn-default" %>
        </div>
      </div>

      <% end %>
    </div>
  </div>
  <div>
  <table class="table table-striped table-responsive">
    <tr>
      <th>Item</th>
      <th class="hidden-xs">Price</th>
      <th class="purchase-button">Purchased?</th>
    </tr>
    <% @items.each do |i| %>
    <tr>
      <td class="col-md-8"><%= i.name %><%= " - " if i.description && i.description.length > 0 %><%= i.description %></td>
      <td class="col-md-2 hidden-xs"><%= i.price %></td>
      <td class="col-md-2 purchase-button">
        <%= button_to "Purchased", drop_group_item_path(@group, i), class: "btn btn-default" %>
      </td>
    </tr>
    <% end %>
  </table>
  </div>
</div>
