<div class="group-page-container">
  <div class="row">
    <div class="col-md-6">
      <h1><%= @group.name %></h1>
      <%= button_to 'Leave Group', groups_leave_path(group_id: @group.id), class: "btn btn-default" %>
      <ul class="nav nav-pills">
        <li role="presentation" class="disabled"><a href="#">All Users: for <%= @group.name %></a></li>
        <% @group.users.each do |u| %>
        <li role="presentation"><%= link_to u.username %></li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-6">
      <%= form_for @item, url: group_items_path(group_id: @group.id) do |u| %>
      <div class="">
        <%= u.label :name %>
        <%= u.text_field :name %>
      </div>
      <div class="hidden-xs hidden-sm">
        <%= u.label :description %>
        <%= u.text_field :description %>
      </div>
      <div class="hidden-xs hidden-sm">
        <%= u.label :price %>
        <%= u.text_field :price %>
      </div>
      <%= u.submit "Submit", class: "btn btn-default" %>

      <% end %>
    </div>
  </div>
  <div>
  <table class="table table-striped table-responsive">
    <tr>
      <th>Item</th>
      <th class="hidden-xs">Price</th>
      <th class="purchase-button">Purchased?</th>
    </tr>
    <% @items.each do |i| %>
    <tr>
      <td class="col-md-8"><%= i.name %><%= " - " if i.description && i.description.length > 0 %><%= i.description %></td>
      <td class="col-md-2 hidden-xs"><%= i.price %></td>
      <td class="col-md-2 purchase-button">
        <%= button_to "Purchased", drop_group_item_path(@group, i), class: "btn btn-default" %>
      </td>
    </tr>
    <% end %>
  </table>
  </div>
</div>
